<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/payFglayout"
    android:background="@drawable/home_bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.PayFg">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/payListSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:queryHint="Search ID..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payRv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/payListSearch"
        app:layout_constraintStart_toStartOf="@+id/payListSearch"
        app:layout_constraintTop_toBottomOf="@+id/payListSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>